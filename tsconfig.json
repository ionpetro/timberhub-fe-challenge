{
  "compilerOptions": {
    "target": "es2015",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "outDir": "./public/",
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@assets/*": ["public/assets/*"],
      "@components/*": ["src/components/*"],
      "@models/*": ["src/models/*"],
      "@public/*": ["public/*"],
      "@services/*": ["src/services/*"],
      "@styles/*": ["src/styles/*"],
      "@utils/*": ["src/utils/*"],
      "@hooks/*": ["src/hooks/*"],
      "@mocks/*": ["src/mocks/*"]
    },
    "incremental": true
  },
  "include": ["next-env.d.ts", "externals.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
